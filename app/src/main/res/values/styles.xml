    <style name="Consultant.Theme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Consultant.Theme.Main"></style>

    <style name="Consultant.ImageButton.SelectableBorderless" parent="Consultant">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

